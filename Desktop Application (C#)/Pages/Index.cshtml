@page
@model Wilproject.Pages.IndexModel

@{
    ViewData["Title"] = "Men Stand Tall";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            background-color: #f4f4f4;
        }

        .sidebar {
            background-color: #4a148c;
            color: white;
            height: 100vh;
            padding: 20px;
            position: fixed;
            width: 250px;
        }

            .sidebar a {
                color: white;
                display: block;
                margin: 10px 0;
                text-decoration: none;
            }

        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

        .header {
            background-color: #6a1b9a;
            color: white;
            padding: 20px;
            text-align: center;
            margin-bottom: 20px;
            border-radius: 5px;
        }

        .card {
            margin: 15px 0;
        }

        .chart-container {
            position: relative;
            height: 40vh;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="main-content">
        <div class="header">
            <h1>Men Stand Tall!</h1>
        </div>

        <!-- Top Row: Project Overview + Messages -->
        <div class="row">
            <!-- Project Overview -->
            <div class="col-md-8 performance-list">
                <h5>Project Overview</h5>
                <div class="card bg-white p-3 shadow-sm">
                    <div class="row">
                        <!-- Donut Chart -->
                        <div class="col-md-6">
                            <canvas id="projectDonut"></canvas>
                        </div>
                        <!-- Progress Bars -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h6>Project A <span class="float-end">70%</span></h6>
                                <div class="progress">
                                    <div class="progress-bar bg-success" style="width:70%"></div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <h6>Project B <span class="float-end">45%</span></h6>
                                <div class="progress">
                                    <div class="progress-bar bg-warning" style="width:45%"></div>
                                </div>
                            </div>
                            <div>
                                <h6>Project C <span class="float-end">90%</span></h6>
                                <div class="progress">
                                    <div class="progress-bar bg-info" style="width:90%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Messages -->
            <div class="col-md-4">
                <div class="card shadow-sm h-100" style="min-height:250px;">
                    <div class="card-body">
                        <h5 class="card-title">Messages</h5>
                        <hr>
                        <p class="d-flex align-items-center">
                            <span class="border-left border-primary pl-2">Reminder.</span>
                        </p>
                        <a href="#" class="text-primary">Post Announcement</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bottom Row: Tasks + Calendar -->
        <div class="row mt-4">
            <!-- Tasks Overview -->
            <div class="col-md-6">
                <h5>Tasks Overview</h5>
                <div class="card bg-white p-3 shadow-sm">
                    <div class="chart-container">
                        <canvas id="tasksChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- Calendar Review -->
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Calendar View</h5>
                        <hr>
                        <p class="mb-2"><strong>June 2025</strong></p>
                        <p><strong>14</strong> <span class="badge badge-info">Event: Talent Show</span></p>
                        <p><strong>21</strong> <span class="badge badge-success">Team Workshop</span></p>
                        <p><strong>28</strong> <span class="badge badge-warning">Maintenance</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>

    <script>
        $(document).ready(function() {
            // ✅ FIX: Project Donut Chart
            var donutCtx = document.getElementById('projectDonut').getContext('2d');
            new Chart(donutCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Project A', 'Project B', 'Project C'],
                    datasets: [{
                        data: [12, 19, 3],
                        backgroundColor: [
                            'rgba(40, 167, 69, 0.6)',
                            'rgba(255, 193, 7, 0.6)',
                            'rgba(23, 162, 184, 0.6)'
                        ],
                        borderColor: [
                            'rgba(40, 167, 69, 1)',
                            'rgba(255, 193, 7, 1)',
                            'rgba(23, 162, 184, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });

            // Tasks Overview Chart
            var tasksCtx = document.getElementById('tasksChart').getContext('2d');
            new Chart(tasksCtx, {
                type: 'pie',
                data: {
                    labels: ['Doing', 'To Do', 'Done'],
                    datasets: [{
                        data: [50, 30, 20],
                        backgroundColor: [
                            'rgba(40, 167, 69, 0.5)',
                            'rgba(255, 193, 7, 0.5)',
                            'rgba(220, 53, 69, 0.5)'
                        ],
                        borderColor: [
                            'rgba(40, 167, 69, 1)',
                            'rgba(255, 193, 7, 1)',
                            'rgba(220, 53, 69, 1)'
                        ],
                        borderWidth: 1
                    }]
                }
            });
        });
    </script>
</body>
</html>