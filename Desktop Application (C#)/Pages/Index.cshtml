@page
@model Wilproject.Pages.IndexModel



<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f4f7fa;
        }

        .card {
            border-radius: 10px;
        }

        .card-header {
            background-color: #ffffff;
        }

        .progress {
            height: 20px;
        }

        .calendar {
            background-color: #ffffff;
            padding: 15px;
            border-radius: 10px;
        }

        .message {
            border-left: 5px solid #007bff;
            padding-left: 10px;
            margin-bottom: 10px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5>Projects Overview</h5>
                        <button class="btn btn-primary btn-sm">+ Add Project</button>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <strong>Talent Show</strong>
                            <div class="progress">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 60%;" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">60%</div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <strong>Community Cleanup</strong>
                            <div class="progress">
                                <div class="progress-bar bg-info" role="progressbar" style="width: 80%;" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">80%</div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <strong>Leadership Workshop</strong>
                            <div class="progress">
                                <div class="progress-bar bg-danger" role="progressbar" style="width: 40%;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100">40%</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Task Board</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <h6>To Do</h6>
                                <div class="border p-3 mb-2">Task 1</div>
                                <div class="border p-3 mb-2">Task 2</div>
                            </div>
                            <div class="col">
                                <h6>Doing</h6>
                                <div class="border p-3 mb-2">Task 3</div>
                            </div>
                            <div class="col">
                                <h6>Done</h6>
                                <div class="border p-3 mb-2">Task 4</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card mb-4 calendar">
                    <div class="card-header">
                        <h5>Calendar View</h5>
                    </div>
                    <div class="card-body">
                        <h6>June 2025</h6>
                        <div>
                            <strong>14</strong>
                            <span class="badge badge-info">Event: Talent Show</span>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Messages</h5>
                    </div>
                    <div class="card-body">
                        <div class="message">
                            <strong></strong> Reminder.
                        </div>
                        <button class="btn btn-link">Post Announcement</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>